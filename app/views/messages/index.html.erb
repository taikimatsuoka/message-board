<div class="panel panel-default">
  
  <div class="panel-heading">
      メッセージ一覧
  </div>
  
  <div class="panel-body">
        <% @messages.each do  |message| %>
      <span class="label label-info"><%= message.name %></span>
          
          <%= message.body %>
          <br>
        <% end %>
        
        
      
  </div>
  
</div>

  <%= form_for(@message) do |f| %>
  <span class="glyphicon glyphicon-user" aria-hidden="true"></span> 名前:
 
          <%= f.text_field :name %>
        <br>
            <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> 内容:
                <%= f.text_area :body, :class => "form-control", :rows => 3 %>
        <br>
                <%= f.submit class: "btn btn-sm btn-info" %>

          <br>
      <br>
        
        
        <% end %>      


