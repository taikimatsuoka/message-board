<div class="panel panel-default">
  <div class="panel-heading">
      メッセージ一覧
  </div>
  <div class="panel-body">
        <% @messages.each do  |message| %>
      <span class="label label-info"><%= message.name %></span>
          <%= message.body %>
          <br>
        <% end %>
        </div>
</div>

    <%= form_for(@message) do |f| %>
    <form class="form-horizontal">

          <div class="form-group">
            <label for="name" class="col-sm-2 control-label">
              <span class="glyphicon glyphicon-user" aria-hidden="true"></span> 名前
            </label>
            <div class="col-sm-10">
          <%= f.text_field :name , class: "form-control" , :placeholder =>"名前" %>
            </div>
          </div>
          <div class="form-group">
            <label for="body" class="col-sm-2 control-label">
              <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> 内容
              </label>
            <div class="col-sm-10">
           <%= f.text_area :body, :class => "form-control", :rows => 3  , :placeholder =>"内容" %>
           <br>      <%= f.submit class: "btn btn-sm btn-info" %>

            </div>
          </div>
</form>

<% end %> 
