<%= form_for(@message) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>

<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>

          <div class="form-group">
            <label for="message_name" class="col-md-2 control-label">
              <span class="glyphicon glyphicon-user" aria-hidden="true"></span> 名前
            </label>
            <div class="col-md-10">
          <%= f.text_field :name , class: "form-control" , :placeholder =>"名前" %>
            </div>           <br>      

          </div>
          <div class="form-group">
            <label for="message_body" class="col-md-2 control-label">
              <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> 内容
              </label>
            <div class="col-md-10">
           <%= f.text_area :body, :class => "form-control", :rows => 3  , :placeholder =>"内容" %>
           <br>      
            </div>
           <div class="form-group">
            <label for="message_name" class="col-md-2 control-label">
              <span class="glyphicon glyphicon-calendar" aria-hidden="true"></span> 年齢
            </label>
            <div class="col-md-10">
          <%= f.text_field :age , class: "form-control" , :placeholder =>"年齢" %>
            </div>
          </div>


           <%= f.submit class: "btn btn-sm btn-info" %>

         </div>  
          
           
<% end %> 

<% end %>